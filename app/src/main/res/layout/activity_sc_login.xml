<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aandroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@mipmap/login_back">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="关闭"
        android:padding="10px"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="10px"
        android:layout_marginLeft="10px"
        android:textSize="36px" />

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="800px"
       android:orientation="vertical"
       android:layout_marginBottom="324px"
       android:layout_marginLeft="60px"
       android:layout_marginRight="60px"
       android:layout_marginTop="170px"
       android:background="@mipmap/login_xiao_back">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="265px"
                android:layout_marginRight="265px"
                android:layout_marginTop="109px"

                android:src="@mipmap/house" />
          <TextView
              android:id="@+id/qrRwdid"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="32px"
              android:text=""
              android:layout_marginTop="30px"
              android:textColor="@color/clogin"
              android:lineSpacingMultiplier="2"
              android:gravity="center"/>
            <TextView
                android:id="@+id/qrRwdid_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:text=""
                android:layout_marginTop="20px"
                android:textColor="@color/clogin"
                android:lineSpacingMultiplier="2"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:text="C段登陆确认"
           android:textColor="@color/clogin"
           android:layout_marginTop="180px"
           android:textSize="34px"
           />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="120px">
           <TextView
               android:id="@+id/qr_login"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="登陆"
               android:layout_alignParentBottom="true"
               android:textSize="30px"
               android:paddingRight="130px"
               android:paddingLeft="130px"
               android:paddingTop="15px"
               android:paddingBottom="15px"
               android:textColor="@color/calca"
               android:layout_centerHorizontal="true"
               android:background="@drawable/button_bg"

               />
       </RelativeLayout>

       <TextView
           android:id="@+id/cancel_text"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="取消登陆"
           android:layout_marginTop="50px"
           android:gravity="center"
           android:textColor="@color/clogin"
           android:textSize="24px"/>
   </LinearLayout>

</LinearLayout>