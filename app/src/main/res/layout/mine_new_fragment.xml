<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_header_layout"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/allLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--头部-->
            <LinearLayout
                android:id="@+id/userInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="140px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivUserImg"
                    android:layout_width="140px"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_launcher" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="登录客户端"
                        android:textColor="@color/black"
                        android:textSize="32px"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="享订单化装修服务"
                        android:textColor="@color/colorGray"
                        android:textSize="28px" />
                </LinearLayout>
            </LinearLayout>
            <!--订单，需求，提现-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:orientation="horizontal">
                <!--订单-->
                <RelativeLayout
                    android:id="@+id/dingdanLayout"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/dingdan_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="——"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dingdan_num"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:text="订单"
                        android:textColor="@color/colorGray"
                        android:textSize="26px" />

                </RelativeLayout>
                <!--需求-->
                <RelativeLayout
                    android:id="@+id/xvqiuLayout"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/xvqiu_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="——"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/xvqiu_num"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:text="预约"
                        android:textColor="@color/colorGray"
                        android:textSize="26px" />

                </RelativeLayout>
                <!--提现-->
                <RelativeLayout
                    android:id="@+id/tixianLayout"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tixian_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="——"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tixian_num"
                        android:layout_marginTop="10px"
                        android:gravity="center"
                        android:text="提现"
                        android:textColor="@color/colorGray"
                        android:textSize="26px" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="40px"
                android:background="@color/colorBG" />
            <!--合作计划-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合伙计划"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tjts_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/tuijian" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tjts_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="4dp"
                            android:text="推荐同事"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/lrkh_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/luru" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lrkh_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="录入客户"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/khgl_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/khgl" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/khgl_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="客户管理"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rlShouyi"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/gxph_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/shouyi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/gxph_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="我的收益"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="40px"
                android:background="@color/colorBG" />

            <!--我的钱包-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/xmk_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/sheji" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/xmk_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="设计"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/jl_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/shigong" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jl_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="施工"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/zc_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/youhuiquan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/zc_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="优惠券"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>
                    <!--无用-->
                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/zd_img"
                            android:layout_width="70px"
                            android:layout_height="70px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/ic_launcher" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/zd_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="账单"
                            android:textColor="@color/black"
                            android:textSize="26px" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="40px"
                android:background="@color/colorBG" />
            <!--服务中心-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务中心"
                    android:textColor="@color/black"
                    android:textSize="32px"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tdfu_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/tuandui" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tdfu_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="服务团队"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/jjwt_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/wenti" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jjwt_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="解决问题"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/zxzx_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/kefu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/zxzx_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="在线咨询"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/tsjy_img"
                            android:layout_width="65px"
                            android:layout_height="65px"
                            android:src="@mipmap/jianyi"
                            android:layout_centerHorizontal="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tsjy_img"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="10px"
                            android:text="投诉建议"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_marginTop="40px"
                android:background="@color/colorBG" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>