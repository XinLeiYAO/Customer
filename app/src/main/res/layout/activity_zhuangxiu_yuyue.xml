<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context=".activity.ZhuangxiuYuyueActivity">

    <include layout="@layout/include_header_layout"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--底部电话,发布需求-->
        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="40px"
            android:paddingTop="20px"
            android:paddingRight="40px"
            android:paddingBottom="20px"
            android:background="@color/colorWhite"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/callPhone"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/shouye_dianhua" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="电话咨询"
                    android:textColor="@color/black"
                    android:textSize="22px" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lianxiKeFu"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="40px"
                    android:layout_height="40px"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/shouye_zixun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="在线客服"
                    android:textColor="@color/black"
                    android:textSize="22px" />

            </RelativeLayout>


            <Button
                android:id="@+id/fabu"
                android:layout_width="350px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5px"
                android:background="@drawable/selector_btn_sub"
                android:text="发布需求"
                android:textColor="@color/colorWhite"
                android:textSize="28px" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="140px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--公装类型-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40px"
                    android:paddingTop="40px"
                    android:paddingRight="40px"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公装类型"
                        android:textColor="@color/black"
                        android:textSize="28px"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLeixing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="10dp"
                            android:text="请选择类型"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/tvHuxing"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:layout_weight="15"
                            android:gravity="right"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="请选择户型"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_go" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="房屋面积"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <EditText
                            android:id="@+id/mianji"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20px"
                            android:layout_weight="15"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="请输入房屋面积"
                            android:inputType="numberDecimal"
                            android:textColor="@color/black"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:textSize="24px" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="m²"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:textSize="24px"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="占位"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/shangmen_liang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/border_blue"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="上门量房"
                            android:textColor="@color/white"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/ziji_liang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15px"
                            android:background="@drawable/border_unselect_blue"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:text="自己量房"
                            android:textColor="@color/colorcjs"
                            android:textSize="22px" />

                        <TextView
                            android:id="@+id/shengMoney"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="10px"
                            android:layout_weight="15"
                            android:gravity="right"
                            android:text="自己量房，立省1000元"
                            android:textColor="@color/tab_color_false"
                            android:textSize="22px" />

                        <EditText
                            android:id="@+id/yusuan_money"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20px"
                            android:layout_weight="15"
                            android:background="@null"
                            android:gravity="right"
                            android:hint="请填写预算金额"
                            android:textColor="@color/black"
                            android:textSize="26px"
                            android:visibility="gone" />

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_go"
                            android:visibility="invisible" />
                    </LinearLayout>


                </LinearLayout>

                <!--地址信息-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginRight="40px"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地址信息"
                        android:textColor="@color/black"
                        android:textSize="28px"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="城市"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/Changcity"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20px"
                            android:layout_weight="15"
                            android:gravity="right"
                            android:text="请选择城市"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_go" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/addressMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:hint="请添加地址"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <RelativeLayout
                            android:id="@+id/addressLayout"
                            android:layout_width="0px"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/address_img"
                                android:layout_width="40px"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:paddingTop="10px"
                                android:paddingBottom="10px"
                                android:src="@mipmap/shouye_weizhi" />

                            <TextView
                                android:id="@+id/getAddress"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="20px"
                                android:layout_toLeftOf="@+id/address_img"
                                android:gravity="right|center_vertical"
                                android:text="获取位置"
                                android:textColor="@color/colorBlack"
                                android:textSize="24px" />


                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="上门时间"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <TextView
                            android:id="@+id/changTime"
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="20px"
                            android:layout_weight="15"
                            android:gravity="right"
                            android:text="请选择上门时间"
                            android:textColor="@color/black"
                            android:textSize="24px" />

                        <ImageView
                            android:layout_width="0px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@mipmap/ic_go" />
                    </LinearLayout>


                </LinearLayout>

                <!--备注需求-->
                <LinearLayout
                    android:id="@+id/beizhuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40px"
                    android:paddingTop="40px"
                    android:paddingRight="40px"
                    android:paddingBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注需求"
                        android:textColor="@color/black"
                        android:textSize="28px"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/beizhuMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginBottom="30px"
                        android:background="@null"
                        android:hint="详细写明需求有时更有助于装修"
                        android:textSize="24px" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/beizhuRecycleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:text="温馨提示"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="1.如有高空作业或疑难问题，需加人工费，最终报价由用户和施工人员双方协商确定；"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="2.双方现场确定预算后，接单人后期不得以任何理由抬高款项；"
                        android:textSize="24px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:text="2.为沟通方便，尽量填写完整的详细信息。"
                        android:textSize="24px" />
                </LinearLayout>

                <!--<View-->
                    <!--android:id="@+id/beizhuLine"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:background="@color/colorGray" />-->

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</LinearLayout>