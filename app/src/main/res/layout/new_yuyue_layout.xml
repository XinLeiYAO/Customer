<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/layout"
    android:orientation="vertical">
    <!--请填写您的信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="28px"
            android:text="请填写您的预约信息"
            />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="40px"
            android:layout_height="40px"
            android:src="@mipmap/delete_image"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <!--信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24px"
            android:text="1"
            />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/ic_go"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGray"/>

    <!--服务地址-->
    <RelativeLayout
        android:id="@+id/addressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/tvSitetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24px"
            android:text="请选择服务地址"
            />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/ic_go"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorGray"/>
    <!--优惠券-->
    <RelativeLayout
        android:id="@+id/ll_youhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24px"
            android:text="优惠券"
            />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@mipmap/ic_go"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>

    <!--金额-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="5dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="¥100"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tvSaveCustomerAppUser"
            android:layout_width="280px"
            android:layout_height="80px"
            android:text="立即预约"
            android:textSize="28px"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/selector_btn_sub"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>


</LinearLayout>