<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:orientation="vertical"
    tools:context=".activity.DingDanXiangQingActivity">

    <include layout="@layout/include_header_layout"></include>

    <ImageView
        android:id="@+id/no_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/kehu_home_wuneirong"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:layout_marginRight="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_circle"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px">

                    <TextView
                        android:id="@+id/zhangdanId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号："
                        android:textColor="@color/black"
                        android:textSize="28px" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="已完成"
                        android:textColor="@color/colorRed"
                        android:textSize="28px" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/shuliang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:text="数量："
                    android:textColor="@color/black"
                    android:textSize="28px" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/top_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"></android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginBottom="20px"
                    android:gravity="center"
                    android:text="查看更多"
                    android:textColor="@color/black"
                    android:textSize="28px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:visibility="gone"
                android:background="@drawable/border_circle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gongyingshangId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:text="供应商：RX123456789"
                    android:textColor="@color/black"
                    android:textSize="28px" />


                <TextView
                    android:id="@+id/finish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:text="完成时间：2019-05-26  15:55"
                    android:textColor="@color/black"
                    android:textSize="28px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"
                    android:text="展示效果"
                    android:textColor="@color/black"
                    android:textSize="28px" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/bottom_recycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="20px"
                    android:layout_marginRight="20px"></android.support.v7.widget.RecyclerView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:layout_marginTop="30px"
                android:background="@drawable/border_circle"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/tell_kefu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        >

                        <ImageView
                            android:id="@+id/kefu_img"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/pingjia_kefu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20px"
                            android:layout_toRightOf="@+id/kefu_img"
                            android:gravity="center"
                            android:text="联系客服"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@color/colorBG" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/tell_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        >

                        <ImageView
                            android:id="@+id/dianhua_img"
                            android:layout_width="60px"
                            android:layout_height="60px"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/pingjia_phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20px"
                            android:layout_toRightOf="@+id/dianhua_img"
                            android:gravity="center"
                            android:text="拨打电话"
                            android:layout_centerVertical="true"
                            android:textColor="@color/text_black"
                            android:textSize="28px" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>