<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="15px">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite"
            android:paddingBottom="5px"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            android:paddingTop="5px"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_m"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/border_write"
        android:orientation="vertical"
        android:paddingBottom="25px"
        android:paddingTop="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25px"
            android:layout_marginTop="10px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_state"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/xiaoxi_hongdian"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/lv_Date"
                android:layout_marginLeft="10px"
                android:layout_marginRight="20px"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5px"
                android:text=""
                android:textSize="28px" />

            <TextView
                android:id="@+id/lv_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20px"
                android:layout_toLeftOf="@+id/lv_time"
                android:text=""
                android:textSize="@dimen/text_size_m" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="#838383"
            android:textSize="28px" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:background="#ededed" />

        <RelativeLayout
            android:id="@+id/rl_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="查看详情"
                android:textColor="@color/text_black"
                android:textSize="28px" />

            <ImageView
                android:layout_width="25px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                app:srcCompat="@mipmap/arrow_left" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>