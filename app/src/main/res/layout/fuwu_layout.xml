<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/include_header_layout" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="85px"
        app:tabMode="scrollable"
        app:tl_indicator_color="#469ee4"
        app:tl_indicator_width="100px"
        app:tl_tab_padding="10px"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="#469ee4"
        android:background="@color/white"
        app:tl_textUnselectColor="#575757"
        app:tl_textsize="40px" />


    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>