<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/newHome_banner"
                android:layout_width="match_parent"
                app:pointsVisibility="false"
                android:layout_height="120dp">
            </com.stx.xhb.xbanner.XBanner>

            <ImageView
                android:id="@+id/newHome_saoyisao"
                android:layout_width="100px"
                android:layout_height="100px"
                android:src="@mipmap/shouye_saoyisao"
                android:layout_alignParentRight="true"
                android:layout_marginTop="100px"
                android:layout_marginRight="30px"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40px"
                android:layout_marginRight="40px"
                android:layout_below="@+id/newHome_banner"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    >
                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="我的预约：待处理0单，进行中0单，查看详情。"
                        android:textColor="@color/black"
                        android:drawableLeft="@mipmap/home_message_icon"
                        android:drawableRight="@mipmap/go_right_icon"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:textSize="24px"
                        android:layout_margin="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        />

                </android.support.v7.widget.CardView>
                <!--地图导航-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="8"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="瑞祥佳艺建筑工程有限公司天津分公司"
                            android:textSize="28px"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:layout_marginRight="20px"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="距您 2.2km >"
                            android:textSize="26px"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorGray"
                            />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="100px"
                        android:layout_height="100px"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/shouye_daohang"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/colorBG"/>

                <!--家庭装修-->
                <LinearLayout
                    android:id="@+id/jiahzuang_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="家庭装修"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            android:gravity="bottom"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="住宅 / 别墅 / 公寓 / 其他"
                            android:textSize="26px"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorGray"
                            />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/colorBG"/>

                <!--办公/商业装修-->
                <LinearLayout
                    android:id="@+id/gongzhuang_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="8"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="办公/商业装修"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="办公室 / 餐饮 / 商业 / 酒店 / 会所 / 其他"
                            android:textSize="26px"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorGray"
                            />
                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/colorBG"/>

                <!--局部维修-->
                <LinearLayout
                    android:id="@+id/weixiu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="8"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="局部维修"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="二手房 / 厨房 / 茶水间 / 其他"
                            android:textSize="26px"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorGray"
                            />
                    </LinearLayout>


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/colorBG"/>

                <!--出租-->
                <LinearLayout
                    android:id="@+id/chuzu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="150px"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="0px"
                        android:layout_weight="8"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="求租/出租"
                            android:textSize="30px"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="住宅 / 别墅 / 写字楼 / 商铺 / 仓库 / 厂房"
                            android:textSize="26px"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorGray"
                            />
                    </LinearLayout>


                </LinearLayout>


                <ImageView
                    android:id="@+id/ivBottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/home_bottom_img"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>