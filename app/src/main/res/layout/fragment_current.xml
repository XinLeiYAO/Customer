<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_header_layout"></include>
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swiperereshlayout"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="24px"
        android:layout_marginTop="30px"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       >
        <TextView
            android:background="#459fe4"
            android:layout_width="6px"
            android:layout_height="28px" />
        <TextView
            android:layout_marginLeft="8px"
            android:textColor="#595757"
            android:textSize="30px"
            android:text="量房"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"
        android:id="@+id/design_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:text="初稿"
        android:paddingBottom="10px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/Designsheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"/>
    <TextView
        android:id="@+id/prototype_text"
        android:layout_marginLeft="24px"
        android:layout_marginTop="20px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="彩平"
        android:textSize="30px"
     />
    <android.support.v7.widget.RecyclerView
        android:paddingBottom="10px"
        android:id="@+id/Archetypediagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        ></android.support.v7.widget.RecyclerView>


            <TextView
                android:id="@+id/element_text"
                android:layout_marginLeft="24px"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元素"
                android:textSize="30px"
                />
            <android.support.v7.widget.RecyclerView
                android:paddingBottom="10px"
                android:id="@+id/element_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                ></android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/color_text"
                android:layout_marginLeft="24px"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色彩"
                android:textSize="30px"
                />
            <android.support.v7.widget.RecyclerView
                android:paddingBottom="10px"
                android:id="@+id/color_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                ></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/textureMateria_text"
                android:layout_marginLeft="24px"
                android:layout_marginTop="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="彩平"
                android:textSize="30px"
                />
            <android.support.v7.widget.RecyclerView
                android:paddingBottom="10px"
                android:id="@+id/textureMateria_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                ></android.support.v7.widget.RecyclerView>
            <TextView
                android:layout_marginLeft="24px"
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/description"/>
            <TextView
                android:paddingRight="20px"
                android:lineSpacingExtra="5px"
                android:id="@+id/DesignDescription"
                android:layout_marginLeft="24px"
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:text="@string/description"/>
        </LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
