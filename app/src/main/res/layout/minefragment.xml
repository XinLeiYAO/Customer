<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBG"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/include_header_layout"></include>


    <RelativeLayout
        android:id="@+id/rl_user_info"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:layout_marginTop="30px"
        android:background="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />

        <ImageView
            android:id="@+id/riv_mine"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="500px"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/riv_mine"
            android:layout_toRightOf="@+id/riv_mine"
            android:orientation="vertical"
            android:paddingLeft="36px">

            <TextView
                android:id="@+id/tv_mine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:textColor="@color/colorBlackLight"
                android:textSize="30px"
         />

            <TextView
                android:id="@+id/tv_mine_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18px"
                android:textColor="@color/colorGrayDark"
                android:textSize="25px"
            />
        </LinearLayout>


        <ImageView
            android:id="@+id/uselessImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:src="@mipmap/arrow_left" />
        <ImageView
            android:layout_toLeftOf="@+id/uselessImage"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:id="@+id/ewmImage"
            android:src="@mipmap/code"
            />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_office"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_noffice" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView7"
            android:textSize="@dimen/text_size_8"
            android:text="办公" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_wallet"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_nwallet" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView8"
            android:textSize="@dimen/text_size_8"
            android:text="钱包" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_jifen"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="1px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_njifen" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView9"
            android:textSize="@dimen/text_size_8"
            android:text="积分" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>
    <!--<View-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="0.1px"-->
    <!--android:background="@color/line1"/>-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_chengjiu"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="1px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_ngrade" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView11"
            android:textSize="@dimen/text_size_8"
            android:text="成就" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_integral"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:layout_marginTop="20px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_nmsg" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView6"
            android:text="消息"
            android:textSize="@dimen/text_size_8" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />

        <TextView
            android:id="@+id/tv_messagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textView9"
            android:layout_centerVertical="true"
            android:background="@drawable/dotred"
            android:gravity="center"
            android:text=""
            android:layout_marginLeft="20px"
            android:textColor="@color/colorWhite"
            android:textSize="24px"
            android:padding="2px"
            android:visibility="gone"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="19dp"
            android:src="@drawable/ic_tab_main" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/imageView10"
            android:textSize="@dimen/text_size_8"
            android:text="钱包" />
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="1px"
        android:id="@+id/rl_settings"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:src="@drawable/ic_mine_nset" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15px"
            android:layout_toRightOf="@+id/imageView12"
            android:textSize="@dimen/text_size_8"
            android:text="设置" />
        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18px"
            android:src="@drawable/ic_go" />
    </RelativeLayout>
</LinearLayout>