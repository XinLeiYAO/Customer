<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<include layout="@layout/include_header_layout"/>-->




    <android.support.v4.view.ViewPager
        android:id="@+id/home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="85px"
        app:tl_indicator_color="#469ee4"
        app:tl_textSelectColor="#469ee4"
        app:tl_textUnselectColor="#575757"
        app:tl_textsize="40px"
        app:tl_tab_space_equal="true"
        app:tl_tab_padding="10px"
        app:tabMode="scrollable"
        android:layout_marginTop="30dp"
        app:tl_indicator_width="100px"/>
</RelativeLayout>