<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20px"
        android:background="@color/colorBG"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="40px"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--名字手机号-->
            <TextView
                android:id="@+id/namePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="张三 137****6666  >"
                />
            <!--家装类型-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tvTypeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/colorGray"
                    android:text="家装类型"
                    android:layout_marginTop="30px"
                    />
                <TextView
                    android:id="@+id/jiazhuangText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/black"
                    android:text="住宅  一室一厅  100m²"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="30dp"
                    />
            </LinearLayout>
            <!--地址信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/colorGray"
                    android:text="地址信息"
                    android:layout_marginTop="30px"
                    />
                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/black"
                    android:text="北京海淀区永定河路瑞祥装饰哈哈哈"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="20px"
                    />
            </LinearLayout>
            <!--量房时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/colorGray"
                    android:text="量房时间"
                    android:layout_marginTop="30px"
                    />
                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24px"
                    android:textColor="@color/black"
                    android:text="2019/05/09 16：57"
                    android:layout_marginTop="30px"
                    android:layout_marginLeft="20px"
                    />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/status_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="40px"
        >

        <TextView
            android:id="@+id/wangong_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认完工"
            android:visibility="visible"
            android:textSize="24px"
            android:layout_alignParentRight="true"
            android:textColor="#469ee4"
            android:background="@drawable/wangong_border"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            />

        <TextView
            android:id="@+id/xiangqing_text"
            android:layout_toLeftOf="@+id/wangong_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"
            android:textSize="24px"
            android:textColor="@color/colorGray"
            android:background="@drawable/chakan_border"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:layout_marginRight="25px"
            />

        <TextView
            android:id="@+id/genggai_text"
            android:layout_toLeftOf="@+id/xiangqing_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改预约"
            android:textSize="24px"
            android:textColor="@color/colorGray"
            android:background="@drawable/chakan_border"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:paddingLeft="25px"
            android:paddingRight="25px"
            android:layout_marginRight="25px"
            />
    </RelativeLayout>


</LinearLayout>