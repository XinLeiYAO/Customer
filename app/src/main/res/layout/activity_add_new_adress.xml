<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".activity.AddNewAdressActivity">

    <include layout="@layout/include_header_layout"
        android:id="@+id/titleLayout"
        ></include>

    <LinearLayout
        android:id="@+id/messageLayout"
        android:layout_below="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="20px"
        android:background="@color/colorWhite"
        >
        <!--联系人-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >
            <TextView
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:text="联系人"
                android:layout_marginLeft="20px"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/etUserName"
                android:layout_width="0px"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:hint="请输入联系人姓名"
                android:background="@null"
                android:layout_marginLeft="30px"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="@color/colorBG"/>

        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >
            <TextView
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/etUserPhone"
                android:layout_width="0px"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:hint="请输入联系人电话"
                android:background="@null"
                android:layout_marginLeft="30px"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10px"
            android:background="@color/colorBG"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >
            <TextView
                android:id="@+id/addressMessage"
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:text="添加地址"
                android:layout_marginLeft="20px"
                android:layout_gravity="center_vertical"
                android:textColor="@color/black"
                />

            <EditText
                android:id="@+id/tv_address"
                android:text=""
                android:textSize="24px"
                android:layout_marginLeft="30px"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/addressLayout"
                android:layout_width="180px"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/address_img"
                    android:layout_width="40px"
                    android:layout_height="60px"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:src="@mipmap/shouye_weizhi"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/getAddress"
                    android:layout_width="wrap_content"
                    android:textSize="24px"
                    android:layout_toLeftOf="@+id/address_img"
                    android:text="获取位置"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:layout_marginRight="20px"
                    />


            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            >
            <TextView
                android:layout_width="130px"
                android:layout_height="wrap_content"
                android:text="详细地址"
                android:layout_gravity="center_vertical"
                android:textSize="24px"
                android:layout_marginLeft="20px"

                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/etSiteRemark"
                android:layout_width="0px"
                android:layout_weight="15"
                android:layout_height="wrap_content"
                android:textSize="24px"
                android:hint="如6号楼1单元1234室"
                android:textColor="@color/black"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30px"
                />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：地址信息仅用于装修服务，请放心填写"
        android:textSize="24px"
        android:textColor="@color/colorGray"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="20px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginBottom="20px"
        >

        <Button
            android:id="@+id/btnDeleteSite"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/shape_btn_sub_un_enabled"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:textColor="@color/black"
            android:text="删除"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_sub"
            android:textColor="@color/colorWhite"
            android:text="保存"
            android:layout_gravity="center_vertical"
            android:textSize="28px"
            />

    </LinearLayout>

</RelativeLayout>