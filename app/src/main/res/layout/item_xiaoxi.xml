<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="15px"
        android:background="@drawable/border_write"
        android:orientation="vertical"
        android:paddingBottom="25px">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70px"
            android:layout_marginLeft="25px"
            android:layout_marginTop="10px">

            <ImageView
                android:id="@+id/xiaoxi_gongdian"
                android:layout_width="12px"
                android:layout_height="12px"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="29px"
                android:src="@mipmap/xiaoxi_hongdian"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_tasktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/xiaoxi_gongdian"
                android:text=""
                android:textColor="@color/text_black"
                android:textSize="32px" />

            <TextView
                android:id="@+id/zongliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/tv_tasktitle"
                android:textColor="@color/text_blackfour"
                android:textSize="26px" />

            <TextView
                android:id="@+id/allowance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5px"
                android:layout_toRightOf="@+id/zongliang"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:textSize="26px" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px"
                android:text=""
                android:textColor="@color/iv_selector"
                android:textSize="28px" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/text_size_8" />

                <TextView
                    android:id="@+id/tv_reward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5px"
                    android:text=""
                    android:textColor="@color/textgreen"
                    android:textSize="@dimen/text_size_8" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35px"
                android:layout_toLeftOf="@+id/lin"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/kehuhome_text2"
                android:textSize="@dimen/text_size_8" />


        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="20px"
            android:background="#ededed" />

        <RelativeLayout
            android:id="@+id/rl_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="25px">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="查看详情"
                android:textColor="@color/text_black"
                android:textSize="28px" />

            <ImageView
                app:srcCompat="@mipmap/arrow_left"
                android:layout_width="25px"
                android:layout_height="30px"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25px" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>