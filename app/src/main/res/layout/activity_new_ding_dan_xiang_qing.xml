<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".activity.NewDingDanXiangQingActivity">

    <include layout="@layout/include_header_layout"></include>
    <ImageView
        android:id="@+id/status_img"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@mipmap/xiadan_img"
        android:scaleType="fitXY"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:background="@color/colorBG"/>
            <!--订单信息-->
            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单信息"
                    android:textColor="@color/black"
                    android:textSize="26px"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGray"
                    android:layout_marginTop="20px"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号："
                        android:textSize="26px"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_order_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC123456789"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:layout_marginLeft="30px"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图纸类型："
                        android:textSize="26px"
                        android:textColor="@color/colorGray"
                        />

                    <TextView
                        android:id="@+id/tv_order_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="效果图"
                        android:textColor="@color/black"
                        android:textSize="26px"
                        android:layout_marginLeft="30px"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="30px"
                android:background="@color/colorBG"/>
            <!--订单进程-->
            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单进程"
                    android:textColor="@color/black"
                    android:textSize="26px"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGray"
                    android:layout_marginTop="20px"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/orderjinchengRecycleview"
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llBottomContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="30px"
                android:background="@color/colorBG"/>

            <!--设计机构-->
            <LinearLayout
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计机构"
                    android:textColor="@color/black"
                    android:textSize="26px"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGray"
                    android:layout_marginTop="20px"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30px"
                    >

                    <ImageView
                        android:id="@+id/design_image"
                        android:layout_width="150px"
                        android:layout_height="150px"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_launcher"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="名称"
                                android:textSize="26px"
                                android:textColor="@color/colorGray"
                                />

                            <TextView
                                android:id="@+id/design_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="26px"
                                android:layout_marginLeft="15px"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="类型"
                                android:textSize="26px"
                                android:textColor="@color/colorGray"
                                />

                            <TextView
                                android:id="@+id/design_dengji"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="26px"
                                android:layout_marginLeft="15px"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"

                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="地址"
                                android:textSize="26px"
                                android:textColor="@color/colorGray"
                                />

                            <TextView
                                android:id="@+id/design_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="26px"
                                android:layout_marginLeft="15px"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="20px"
                            android:layout_marginTop="20px"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单数"
                                android:textSize="26px"
                                android:textColor="@color/colorGray"
                                />

                            <TextView
                                android:id="@+id/design_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1008611"
                                android:textColor="@color/black"
                                android:textSize="26px"
                                android:layout_marginLeft="15px"
                                />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="30px"
                android:background="@color/colorBG"/>

            <!--订单进程-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图纸信息"
                    android:textColor="@color/black"
                    android:textSize="26px"
                    android:textStyle="bold"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/colorGray"
                    android:layout_marginTop="10dp"
                    />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/orderMessageRecycleView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="30px"
                android:layout_marginTop="30px"
                android:background="@color/colorBG"/>

            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                >
                
                <TextView
                    android:id="@+id/manyiCommit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="满意验收"
                    android:textSize="26px"
                    android:textColor="#469ee4"
                    android:background="@drawable/wangong_border"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:paddingLeft="25px"
                    android:paddingRight="25px"
                    android:layout_alignParentRight="true"
                    />

                <TextView
                    android:id="@+id/againDesign"
                    android:layout_toLeftOf="@+id/manyiCommit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="重新设计"
                    android:textSize="26px"
                    android:textColor="@color/colorGray"
                    android:background="@drawable/chakan_border"
                    android:paddingTop="10px"
                    android:paddingBottom="10px"
                    android:paddingLeft="25px"
                    android:paddingRight="25px"
                    android:layout_marginRight="20px"
                    />
            </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>