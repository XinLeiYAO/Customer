<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/show_popup"
        android:layout_width="match_parent"
        android:layout_height="88px"
        android:background="#FFF">

        <ImageView
            android:id="@+id/iv_kefu"
            android:layout_width="44px"
            android:layout_height="44px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36px"
            android:gravity="center"
            android:src="@mipmap/kehu_home_kefu"
            />

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="43px"
            android:layout_height="46px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="36px"
            android:src="@mipmap/scan_pc"
            android:visibility="visible" />

        <TextView
            android:id="@+id/iv_kefu_message"
            android:layout_width="30px"
            android:layout_height="30px"
            android:background="@drawable/text_circle"
            android:text="1"
            android:textSize="16px"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_kefu"
            android:layout_marginTop="10px"
            android:layout_marginLeft="5px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:singleLine="true"
            android:text="首页"
            android:textColor="@color/black"
            android:textSize="36px" />

        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="36px"
            android:layout_height="26px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_title"
            android:layout_marginLeft="10px"
            android:src="@mipmap/order_img"
            />

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15px"
            android:background="#00a0ea"
            android:gravity="center"
            android:paddingRight="15px"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:textSize="32px"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>